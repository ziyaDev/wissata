// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode = "prisma"
  
}

generator client {
   previewFeatures = ["fullTextSearch", "fullTextIndex"]
  provider = "prisma-client-js"
}


model Petition {
  id               String @id @unique @default(cuid())
  serial_number    Int
  title            String
  type             String
  base_sector      String
  petition_content String
  sector           String
  sn_date_petition  Json?
}

model Users {
  id       String @id @unique @default(cuid())
  userName String @unique
  firstName String
  lastName String
  password String
  role     String
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  }

model Reception {
  id Int @id @unique @default(autoincrement())
  fullName String
  visited Visit[]
  docNumber String?
  grades String 
  town String
  city String
  petitionHasFiled  Boolean @default(false)
  sector  String?
  unstutation String?
  subject String?
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  submited Boolean @default(false)
}
model Visit {
  id Int @id @unique @default(autoincrement())
  reception   Reception @relation(fields: [receptionId], references: [id])
  receptionId Int
  date DateTime @db.Timestamptz(3) 
  note String?
  @@index([receptionId])
}
model Tasks {
  id Int @id @unique @default(autoincrement())
  createdBy  String 
  users String[]
  title String
  description String?
  finishedAt DateTime? @db.Timestamptz(3)
  status  String @default("pending")
  createdAt DateTime @default(now()) @db.Timestamptz(3)
}

